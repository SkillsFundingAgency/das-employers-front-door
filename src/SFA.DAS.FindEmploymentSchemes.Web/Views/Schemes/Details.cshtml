@model SchemeDetailsModel

@{
    ViewData["Title"] = Model.Scheme.Name.Substring(0, Math.Min(Model.Scheme.Name.Length, 64));
}

@section BreadCrumbs {
    <a id="scheme-details-breadcrumb-back-link" href="/" class="govuk-back-link">Home</a>
}

<div id="scheme-details-outer" class="govuk-grid-row">
	<div id="scheme-details-inner-two-thirds" class="govuk-grid-column-two-thirds">
        <h1 id="scheme-details-h1" class="govuk-heading-l">
            @Model.Scheme.Name
        </h1>
        @if (Model.Scheme.DetailsPageOverride != null)
        {
            @Model.Scheme.DetailsPageOverride
        }
        else
        {
		    @Model.Scheme.Description
            <h2 id="scheme-details-h2-cost" class="govuk-heading-m"> Employer cost </h2>
		        @Model.Scheme.Cost  
		    <h2 id="scheme-details-h2-responsibility" class="govuk-heading-m"> Employer responsibilities </h2>
		        @Model.Scheme.Responsibility
            <h2 id="scheme-details-h2-benefits" class="govuk-heading-m">Benefits of @Model.Scheme.Name</h2>
                @Model.Scheme.Benefits
            @if (@Model.Scheme.CaseStudies != null)
            {
                <h2 id="scheme-details-h2-case-studies" class="govuk-heading-m">Case studies</h2>
                @*@Model.Scheme.CaseStudies*@

                <details class="govuk-details" data-module="govuk-details">
                    <summary class="govuk-details__summary1">
                        <span class="govuk-details__summary1-text">
                            How businesses are using government incentives to the Apprenticeship service
                        </span>
                    </summary>
                    <div class="govuk-details__text">
                        <p><b>Paul Sinieki, Strategic Labour Needs and Training Manager at MTR Elizabeth Line said:</b></p>
                        <p>We plan to continue to offer apprenticeship opportunities in 2021 and will be recruiting for the role of Customer Experience Assistant to work at the new stations in the Crossrail tunnel, and we will also be using the new 'Redundancy Support Service for Apprentices', who have been made redundant, for future apprenticeship opportunities, supporting those that have lost their job and giving them a new start.</p>
                        <a href="https://www.gov.uk/government/case-studies/how-employers-are-making-the-most-of-apprenticeship-incentives">Link to full page</a>
                    </div>
                </details>
                <details class="govuk-details" data-module="govuk-details">
                    <summary class="govuk-details__summary2">
                        <span class="govuk-details__summary2-text">
                            Smith & Williamson
                        </span>
                    </summary>
                    <div class="govuk-details__text">
                        <p>Smith & Williamson is among the ten largest firms of accountants in the UK. With a workforce of 1800, Smith and Williamson has 124 apprentices, in roles including Assurance & Business Services, Business Tax and Private Client Tax. The firm merged with Tilney Group in September 2020 and is now part of the Tilney Smith and Williamson Group.<p></p>
                    </div>
                </details>
                <details class="govuk-details" data-module="govuk-details">
                    <summary class="govuk-details__summary3">
                        <span class="govuk-details__summary3-text">
                            What is the ... service?
                        </span>
                    </summary>
                    <div class="govuk-details__text">
                        <iframe width="560" height="315" src="https://www.youtube.com/embed/xWUFLAAc4TY" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    </div>
                </details>


            }
            <section id="scheme-details-section-offer-header" class="cx-cta-box">
                <h2 id="scheme-details-h2-offer-header" class="govuk-heading-m">@Model.Scheme.OfferHeader</h2>
                @Model.Scheme.Offer
            </section>        }
	</div>
	<div id="scheme-details-inner-one-third" class="govuk-grid-column-one-third">
		<h3 id="scheme-details-inner-h3" class="govuk-heading-m">Other schemes</h3>
        <ul id="scheme-details-inner-ul" class="govuk-list">
            @foreach (var scheme in Model.OtherSchemes)
            {
                <li id="scheme-details-inner-li-@scheme.HtmlId">
                    <a id="scheme-details-inner-link-@scheme.HtmlId" asp-route="schemes" asp-route-schemeUrl="@scheme.Url" class="govuk-link">@scheme.Name</a>
                </li>
			}
        </ul>
	</div>
</div>