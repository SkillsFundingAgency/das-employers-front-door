@model FilterGroupModel

<div id="filter-group-@Model.Name" class="govuk-form-group">
    <fieldset id="filter-group-fieldset-@Model.Name" class="govuk-fieldset">
        <legend id="filter-group-legend-@Model.Name" class="govuk-fieldset__legend govuk-fieldset__legend--m">
            @Model.Description
        </legend>
        <div id="filter-group-checkboxes-container-outer-@Model.Name" class="govuk-checkboxes govuk-checkboxes--small">
            @foreach (var filter in Model.Filters)
            {
                <div id="filter-group-checkboxe-container-inner-@filter.Id" class="govuk-checkboxes__item">
                    <input class="govuk-checkboxes__input" id="@filter.Id" name="@Model.Name" type="checkbox" value="@filter.Id">
                    <label id="filter-group-checkbox-label-@filter.Id" class="govuk-label govuk-checkboxes__label" for="@filter.Id">
                        @filter.Description
                    </label>
                </div>
            }
        </div>
    </fieldset>
</div> 
